@using AchuBan_ECom.Models.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center gap-3">
            <i class="bi bi-bag-heart fs-2 text-primary"></i>
            <div>
                <h2 class="mb-0 fw-semibold">Products</h2>
                <small class="text-muted">Manage your product catalog</small>
            </div>
        </div>

        <div>
            <a asp-area="Admin" asp-controller="Products" asp-action="Upsert"
               class="btn btn-primary d-inline-flex align-items-center px-3 py-2">
                <i class="bi bi-plus-lg me-2"></i>
                <span class="fw-semibold">Add Product</span>
            </a>
        </div>
    </div>
</div>

<!-- render antiforgery token (hidden) so product.js can read it for AJAX POSTs -->
<form id="antiForgeryForm" style="display:none">
    @Html.AntiForgeryToken()
</form>

<table id="productsTable" class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price50)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price100)
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section Scripts {
    <script src="~/js/product.js"></script>
}